{
  "root": "packages/ui-web",
  "name": "@gv-tech/ui-web",
  "tags": ["npm:public"],
  "metadata": {
    "targetGroups": {
      "NPM Scripts": ["build", "lint", "test", "typecheck"]
    },
    "description": "Web (DOM/Radix) implementations of the GV Tech design system components",
    "js": {
      "packageName": "@gv-tech/ui-web",
      "packageVersion": "2.7.0",
      "packageExports": {
        ".": {
          "types": "./src/index.ts",
          "default": "./src/index.ts"
        },
        "./*": {
          "types": "./src/*/index.ts",
          "default": "./src/*/index.ts"
        }
      },
      "packageMain": "src/index.ts",
      "isInPackageManagerWorkspaces": true
    }
  },
  "targets": {
    "build": {
      "executor": "nx:run-script",
      "options": {
        "script": "build"
      },
      "metadata": {
        "scriptContent": "echo 'No build step â€” consumed as TS source by sibling packages'",
        "runCommand": "yarn build"
      },
      "configurations": {},
      "parallelism": true,
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"],
      "cache": true
    },
    "lint": {
      "executor": "nx:run-script",
      "options": {
        "script": "lint"
      },
      "metadata": {
        "scriptContent": "echo 'Linted from workspace root'",
        "runCommand": "yarn lint"
      },
      "configurations": {},
      "parallelism": true,
      "inputs": ["default"],
      "cache": true
    },
    "test": {
      "executor": "nx:run-script",
      "options": {
        "script": "test"
      },
      "metadata": {
        "scriptContent": "vitest run",
        "runCommand": "yarn test"
      },
      "configurations": {},
      "parallelism": true,
      "inputs": ["default", "^production"],
      "cache": true
    },
    "typecheck": {
      "executor": "nx:run-script",
      "options": {
        "script": "typecheck"
      },
      "metadata": {
        "scriptContent": "npx tsc --noEmit",
        "runCommand": "yarn typecheck"
      },
      "configurations": {},
      "parallelism": true
    },
    "nx-release-publish": {
      "executor": "@nx/js:release-publish",
      "dependsOn": ["^nx-release-publish"],
      "options": {},
      "configurations": {},
      "parallelism": true
    }
  },
  "implicitDependencies": []
}
