{
  "name": "gvtech-design-system",
  "version": "0.6.3",
  "description": "Garcia Ventures react design system",
  "license": "MIT",
  "author": "Eric N. Garcia <eng618@garciaericn.com>",
  "main": "dist/index.js",
  "repository": "git@github.com:Garcia-ventures/gvtech-design.git",
  "scripts": {
    "build": "vite build",
    "build-storybook": "storybook build",
    "build-storybook-docs": "storybook build --docs",
    "dev": "vite dev",
    "format": "prettier --write .",
    "format:ci": "prettier --check .",
    "format:diff": "prettier --check \"src/**/*.{scss,css,js,md,mdx}\"",
    "lint": "eslint . --cache",
    "lint:fix": "eslint . --cache --fix",
    "lint:report": "eslint . --cache -o ./eslintReport.html -f html",
    "prepare": "husky",
    "release": "auto shipit",
    "start": "vite dev",
    "storybook": "storybook dev -p 9009",
    "test": "vitest",
    "test:ci": "CI=true vitest --run --reporter=dot"
  },
  "dependencies": {
    "polished": "^4.3.1",
    "prop-types": "^15.8.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-is": "^19.0.0",
    "styled-components": "^6.3.8"
  },
  "devDependencies": {
    "@auto-it/conventional-commits": "^10.46.0",
    "@auto-it/twitter": "^10.46.0",
    "@babel/cli": "^7.28.6",
    "@babel/core": "^7.28.6",
    "@babel/preset-env": "^7.28.6",
    "@babel/preset-react": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@eng618/prettier-config": "^2.5.2",
    "@eslint/js": "^9.39.2",
    "@mdx-js/react": "^3.1.1",
    "@storybook/addon-a11y": "^10.2.1",
    "@storybook/addon-docs": "10.2.1",
    "@storybook/addon-links": "^10.2.1",
    "@storybook/builder-vite": "^10.2.1",
    "@storybook/cli": "^10.2.1",
    "@storybook/jest": "^0.2.3",
    "@storybook/react": "^10.2.1",
    "@storybook/react-docgen-typescript-plugin": "^1.0.1",
    "@storybook/react-vite": "^10.2.1",
    "@storybook/testing-library": "^0.2.2",
    "@testing-library/dom": "^8.0.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitejs/plugin-react": "^5.1.2",
    "auto": "^10.46.0",
    "babel-loader": "^9.2.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-storybook": "^10.2.1",
    "globals": "^17.2.0",
    "husky": "^9.1.7",
    "jsdom": "^21.1.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "react-docgen-typescript": "^2.4.0",
    "storybook": "^10.2.1",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^1.3.5"
  },
  "lint-staged": {
    "*.(js|ts|mjs|cjs)?(x)": [
      "prettier --write",
      "eslint --cache --fix"
    ],
    "*.(md)?(x)": [
      "prettier --write"
    ]
  },
  "prettier": "@eng618/prettier-config",
  "auto": {
    "plugins": [
      [
        "twitter",
        {
          "threshold": "patch"
        }
      ],
      "npm",
      "all-contributors",
      [
        "conventional-commits",
        {
          "defaultReleaseType": "patch"
        }
      ],
      "released"
    ]
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ]
  },
  "browserslist": {
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ],
    "production": [
      ">0.2%",
      "not dead"
    ]
  },
  "packageManager": "yarn@4.12.0"
}
