{
  "name": "gvtech-design-system",
  "version": "0.6.3",
  "description": "Garcia Ventures react design system",
  "license": "MIT",
  "author": "Eric N. Garcia <eng618@garciaericn.com>",
  "main": "dist/index.cjs.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "repository": "git@github.com:Garcia-ventures/gvtech-design.git",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json && vite build",
    "build-storybook": "storybook build",
    "build-storybook-docs": "storybook build --docs",
    "dev": "vite dev",
    "format": "prettier --write .",
    "format:ci": "prettier --check .",
    "lint": "eslint . --cache",
    "lint:fix": "eslint . --cache --fix",
    "lint:report": "eslint . --cache -o ./eslintReport.html -f html",
    "prepare": "husky",
    "start": "vite dev",
    "storybook": "storybook dev -p 9009",
    "serve": "yarn build-storybook && yarn dlx serve -s storybook-static -l 6006",
    "test": "vitest",
    "test:ci": "CI=true vitest --run --reporter=dot",
    "test:watch": "vitest --watch",
    "validate": "node ./scripts/validate.js"
  },
  "peerDependencies": {
    "polished": "^4.0.0",
    "prop-types": "^15.8.0",
    "react": "^18 || ^19",
    "react-dom": "^18 || ^19",
    "react-is": "^16 || ^17 || ^18 || ^19",
    "styled-components": "^5 || ^6"
  },
  "devDependencies": {
    "@babel/cli": "^7.28.6",
    "@babel/core": "^7.28.6",
    "@babel/preset-env": "^7.28.6",
    "@babel/preset-react": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@eng618/prettier-config": "^2.5.2",
    "@eslint/js": "^9.39.2",
    "@mdx-js/react": "^3.1.1",
    "@storybook/addon-a11y": "10.2.1",
    "@storybook/addon-docs": "10.2.1",
    "@storybook/addon-links": "10.2.1",
    "@storybook/builder-vite": "10.2.1",
    "@storybook/cli": "10.2.1",
    "@storybook/jest": "^0.2.3",
    "@storybook/react-vite": "10.2.1",
    "@storybook/testing-library": "^0.2.2",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitejs/plugin-react": "5.1.2",
    "axe-core": "^4.7.2",
    "babel-loader": "^10.0.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-storybook": "10.2.1",
    "globals": "^17.2.0",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "lint-staged": "^16.2.7",
    "polished": "^4.3.1",
    "prettier": "^3.8.1",
    "prop-types": "^15.8.1",
    "react": "^19.2.4",
    "react-docgen-typescript": "^2.4.0",
    "react-dom": "^19.2.4",
    "react-is": "^19.2.4",
    "storybook": "10.2.1",
    "styled-components": "^6.3.8",
    "typescript": "^5.9.3",
    "vite": "7.3.1",
    "vitest": "^4.0.18"
  },
  "lint-staged": {
    "*.(js|ts|mjs|cjs)?(x)": [
      "prettier --write",
      "eslint --cache --fix"
    ],
    "*.(md)?(x)": [
      "prettier --write"
    ]
  },
  "prettier": "@eng618/prettier-config",
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ]
  },
  "browserslist": {
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ],
    "production": [
      ">0.2%",
      "not dead"
    ]
  },
  "packageManager": "yarn@4.12.0"
}
