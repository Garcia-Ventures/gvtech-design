{
  "name": "@gv-tech/design-system",
  "version": "0.9.0",
  "description": "Garcia Ventures react design system",
  "license": "MIT",
  "author": "Eric N. Garcia <eng618@garciaericn.com>",
  "main": "dist/index.cjs.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "repository": "git@github.com:Garcia-Ventures/gvtech-design.git",
  "scripts": {
    "build": "yarn build:registry && tsc -p tsconfig.build.json && vite build",
    "build:registry": "tsx scripts/build-registry.ts",
    "dev": "vite",
    "format": "prettier --write .",
    "format:ci": "prettier --check .",
    "lint": "eslint . --cache",
    "lint:fix": "eslint . --cache --fix",
    "lint:report": "eslint . --cache -o ./eslintReport.html -f html",
    "prepare": "husky",
    "start": "vite",
    "test": "vitest",
    "test:ci": "CI=true vitest --run --reporter=dot",
    "test:watch": "vitest --watch",
    "validate": "node ./scripts/validate.js",
    "validate:fix": "node ./scripts/validate.js --fix"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.563.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@eng618/prettier-config": "^2.5.3",
    "@eslint/js": "^9.39.2",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^25.2.0",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitejs/plugin-react-swc": "^4.2.3",
    "autoprefixer": "^10.4.24",
    "axe-core": "^4.11.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.6",
    "prettier": "^3.8.1",
    "prettier-plugin-organize-imports": "^4.3.0",
    "prop-types": "^15.8.1",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-is": "^19.2.4",
    "tailwindcss": "3",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "7.3.1",
    "vitest": "^4.0.18"
  },
  "peerDependencies": {
    "prop-types": "^15.8.0",
    "react": "^18 || ^19",
    "react-dom": "^18 || ^19",
    "react-is": "^16 || ^17 || ^18 || ^19"
  },
  "engines": {
    "node": ">=20"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "lint-staged": {
    "*.(js|ts|mjs|cjs)?(x)": [
      "prettier --write",
      "eslint --cache --fix"
    ],
    "*.(md)?(x)": [
      "prettier --write"
    ]
  },
  "prettier": "@eng618/prettier-config",
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ]
  },
  "browserslist": {
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ],
    "production": [
      ">0.2%",
      "not dead"
    ]
  },
  "packageManager": "yarn@4.12.0"
}
