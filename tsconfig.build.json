{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "declaration": true,
    "emitDeclarationOnly": false,
    "declarationMap": true,
    "outDir": "dist",
    "rootDir": ".",
    "allowImportingTsExtensions": false
  },
  "include": ["src", "packages"],
  "exclude": [
    "src/**/*.test.tsx",
    "src/**/*.test.ts",
    "src/setupTests.ts",
    "packages/**/*.test.tsx",
    "packages/**/*.test.ts",
    "packages/**/vite.config.ts",
    "packages/**/src/setupTests.ts"
  ]
}
